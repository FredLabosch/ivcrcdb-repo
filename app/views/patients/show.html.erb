<% provide(:title, @patient.name) %>
<section>
  <h1>
    <%#= gravatar_for @user %>
    Patient
  </h1>
</section>
<section>
    <p>
        <strong>Name:</strong>
        <%= @patient.name %>
    </p>
    <p>
        <strong>First Name:</strong>
        <%= @patient.first_name %>
    </p>
    <p>
        <strong>Gender:</strong>
        <%= @patient.gender %>
    </p>
  <p>
    <strong>Birthday:</strong>
    <%= @patient.birthday %>
  </p>
  <p>
    <strong>Age (today):</strong>
    <%= get_age_from_date(@patient.birthday.to_date)  %>
  </p>
  <p>
    <strong>Street:</strong>
    <%= @patient.street %>
  </p>
  <p>
    <strong>Zip Code:</strong>
    <%= @patient.zip_code %>
  </p>
  <p>
    <strong>City:</strong>
    <%= @patient.city %>
  </p>
  <p>
    <strong>Phone:</strong>
    <%= @patient.phone %>
  </p>
  <p>
    <strong>Cell Phone:</strong>
    <%= @patient.cell_phone %>
  </p>
  <p>
    <strong>NAA:</strong>
    <%= @patient.naa %>
  </p>
    <%= link_to 'Edit Patient', edit_patient_path(@patient), class: "btn btn-default btn-primary" %>
</section>

<section>
  <% if @patient.examinations.any? %>
        <%= render :partial => 'examinations/examination_table', :locals => {:examinations => @patient.examinations.paginate(:per_page => 5, :page => params[:page])} %>
  <% end %>
  <%= link_to 'Add Examination', new_patient_examination_path(@patient), class: "btn btn-default btn-success" %>
</section>